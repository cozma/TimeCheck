<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you a..."
            android:id="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textSize="50dp"/>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card1"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="100dp"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="30dp"
            android:elevation="2dp"
            android:onClick="launchDriverActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/card1_img"
                    android:src="@drawable/bus_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/card1_text"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="Bus Driver"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card2"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="100dp"
            card_view:cardCornerRadius="4dp"
            android:layout_marginTop="30dp"
            android:elevation="2dp"
            android:onClick="launchRiderActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/card2_img"
                    android:src="@drawable/passenger_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/card2_text"
                    android:textSize="20dp"
                    android:layout_gravity="center_vertical"
                    android:text="Passenger"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</RelativeLayout>